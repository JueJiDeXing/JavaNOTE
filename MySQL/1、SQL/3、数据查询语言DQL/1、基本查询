# 语法
select      字段列表
from        表名列表
where       条件列表
group by    分组字段列表
having      分组后条件列表
order by    排序字段列表
limit       分页参数

# 基本查询
select 字段1,字段2... from 表名; # 查询多个字段
select * from 表名; # 查询全部字段,不推荐使用

select 字段1 [as 别名1],字段2 [as 别名2]...from 表名; # 设置别名,其中as可以省略

select distinct 字段列表 from 表名; # 去除重复记录




